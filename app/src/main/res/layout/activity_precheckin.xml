<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/matches"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:text="Greenspaces near you"
        android:textSize="26dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="52dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checkin_info"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:text="Click a greenspace to check in!"
        android:textSize="20dp"
        android:paddingBottom="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/matches" />


    <ScrollView
        android:id="@+id/matches_container"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/checkin_info"
        android:scrollbars="vertical"
        >



    </ScrollView>

    <!-- navbar -->
    <layout.NavBar
        android:layout_height="56dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>