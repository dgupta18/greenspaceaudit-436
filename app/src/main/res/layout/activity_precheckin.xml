<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/checkin_info"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#388E3C"
        android:gravity="center"
        android:layout_marginBottom="44dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Greenspaces near you"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:text="Click a greenspace to check in!"
            android:textSize="20sp"
            android:textColor="#CCFFB5"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <!-- navbar -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="68dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/checkin_info"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:id="@+id/matches_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <layout.NavBar
        android:layout_height="56dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>